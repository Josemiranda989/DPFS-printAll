<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head.ejs', {style: "home"}) %>
  <body>
    <!-- Navbar -->
    <%- include('../partials/navbar.ejs') %>
    <!-- Main -->
    <main class="container">
      <h1>Vista de perfil de: <%= user.name %></h1>
      <img
        width="250px"
        src="/images/users/<%= user.avatar %>"
        alt="Avatar de <%= user.name %>"
      />
      <p><%= user.email %></p>

      <div class="buttons">
        <a class="btn btn__update" href="/users/edit/<%= user.id %>"
          >Editar producto</a
        >
        <!-- Form para eliminar producto -->
        <form
          action="/users/delete/<%= user.id %>?_method=DELETE"
          method="post"
        >
          <button class="btn btn__delete" href="">Eliminar</button>
        </form>
      </div>
    </main>
    <!-- Footer -->
    <%- include('../partials/footer.ejs') %>
  </body>
</html>
