<!DOCTYPE html>
<html lang="es">
  <!-- Head -->
  <%- include('./partials/head.ejs', {style: "home"}) %>
  <body>
    <!-- Navbar -->
    <%- include('./partials/navbar.ejs') %>
    <!-- Main -->
    <main>
      <section class="banner">
        <h3>Impréndete en el mundo de la fabricación digital</h3>
        <button>Click Aquí</button>
      </section>
      <section class="container">
        <h2>Featured Models</h2>
        <div class="cards__container">
          <% products.forEach(prod => { %>            
            <a href="/products/detail/<%= prod.id %>">
              <article class="card">
                <img src="images/products/<%= prod.image %>" alt="<%= prod.name %>" />
                <div>
                  <h4><%= prod.name %></h4>
                  <p>$<%= prod.price %></p>
                </div>
              </article>
            </a>
          <% }) %>
        <button type="submit" class="btn">More Models</button>
      </section>

      <section class="container">
        <h2>Newest Models</h2>
        <div class="cards__container">

          <article class="card">
            <img
              src="./images\products/20241005_083739.webp"
              alt="product-image"
            />
            <div>
              <h4>Batery Stand</h4>
              <p>$20</p>
            </div>
          </article>

          <article class="card">
            <img src="./images\products/img_3265.webp" alt="product-image" />
            <div>
              <h4>Batery Stand</h4>
              <p>$20</p>
            </div>
          </article>

          <article class="card">
            <img
              src="./images\products/small-thumbnail.webp"
              alt="product-image"
            />
            <div>
              <h4>Batery Stand</h4>
              <p>$20</p>
            </div>
          </article>
        </div>
        <button class="btn">Explore Models</button>
      </section>
    </main>
    <!-- Footer -->
    <%- include('./partials/footer.ejs') %>
  </body>
</html>
