<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head.ejs', {style: "home"}) %>
  <body>
    <!-- Navbar -->
    <%- include('../partials/navbar.ejs') %>
    <!-- Main -->
    <main>
      <h1>Editar Producto: <%= prodFound.name %></h1>

      <form method="post"  action="/products/edit/<%= prodFound.id %>?_method=PUT" enctype="multipart/form-data">
        <div>
          <label for="name">Nombre</label>
          <input
            type="text"
            name="name"
            id="name"
            placeholder="Vaso 500ML"
            value="<%= prodFound.name %>"
          />
        </div>

        <div>
          <label for="descripcion">Descripcion</label>
          <textarea
            name="description"
            id="descripcion"
            placeholder="Impreso en PLA multicolor..."
          >
<%= prodFound.description %></textarea
          >
        </div>

        <div>
          <label for="category">Categoria</label>
          <select name="category" id="category">
            <option value="hogar" <%= prodFound.category == "hogar" ? "selected" : "" %>>Hogar</option>
            <option value="geek" <%= prodFound.category == "geek" ? "selected" : "" %>>Geek</option>
            <option value="figuras" <%= prodFound.category == "figuras" ? "selected" : "" %>>Figuras</option>
            <option value="soportes" <%= prodFound.category == "soportes" ? "selected" : "" %>>Soportes</option>
          </select>
        </div>

        <div>
          <label for="colors">Color</label>
          <select name="colors" id="colors">
            <option value="#ffffff" <%= prodFound.colors == "#ffffff" ? "selected" : "" %>>Blanco</option>
            <option value="#2dc548" <%= prodFound.colors =="#2dc548" ? "selected" : "" %>>Verde</option>
            <option value="#ff2d00" <%= prodFound.colors =="#ff2d00"? "selected" : "" %>>Rojo</option>
            <option value="#eaf500" <%= prodFound.colors =="#eaf500"? "selected" : "" %>>Amarillo</option>
            <option value="#1300f5" <%= prodFound.colors == "#1300f5" ? "selected" : "" %>>Azul</option>
          </select>
        </div>

        <div>
          <label for="filament">Filamento</label>
          <select name="filament" id="filament">
            <option selected disabled>Selecciona una opcion</option>
            <option value="pla">PLA</option>
            <option value="tpu">TPU</option>
            <option value="abs">ABS</option>
          </select>
        </div>

        <div>
          <label for="image">Imagen</label>
          <input type="file" id="image" name="image" accept="image/*" />
        </div>

        <div>
          <label for="size">Tama√±o</label>
          <select name="size" id="size">
            <option selected disabled>Selecciona una opcion</option>
            <option value="S">S</option>
            <option value="M">M</option>
            <option value="L">L</option>
            <option value="XL">XL</option>
          </select>
        </div>

        <div>
          <label for="price">Precio</label>
          <input type="number" name="price" id="price"  value="<%= prodFound.price %>"/>
        </div>

        <div>
          <label for="available">Disponible</label>
          <input type="checkbox" name="available" id="available" <%= prodFound.available ==  "on" ? "checked" : "" %>/>
        </div>

        <button type="submit">EDITAR</button>
      </form>
    </main>
    <!-- Footer -->
    <%- include('../partials/footer.ejs') %>
  </body>
</html>
